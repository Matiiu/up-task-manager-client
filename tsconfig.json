{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,
    "baseUrl": "src",
    "paths": {
      "@/components/*": ["components/*"],
      "@/views/*": ["views/*"],
      "@/layouts/*": ["layouts/*"],
      "@/routes/*": ["routes/*"],
      "@/schemas/*": ["schemas/*"],
      "@/types/*": ["types/*"],
      "@/api/*": ["api/*"],
      "@/lib/*": ["lib/*"],
      "@/utils/*": ["utils/*"],
      "@/locales/*": ["locales/*"],
      "@/constants/*": ["constants/*"],
      "@/services/*": ["services/*"],
      "@/hooks/*": ["hooks/*"],
    },

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "types": ["react", "react-dom"]
  },
  "include": ["src"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
